<!DOCTYPE html>
<html>
  <head>
    <title>OdinKittens</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <nav class="navbar navbar-dark bg-dark justify-content-between pl-3 pr-3">
        <%= link_to "Kittens", root_path , {class:"navbar-brand"} %>

        <div class="d-flex ">
            <%= link_to 'New Kitten', new_kitten_path, class: "btn btn-outline-info mr-2 my-2 my-sm-0" %>

        </div>
      </nav>

    <% if notice %>
        <div class="alert alert-success" role="alert">
            <%= notice %>
        </div>
    <% end %>

    <% p "Alert in the application" %>
    <% p flash[:alert] %>


    <% if flash[:alert] %>
        <div class="alert alert-danger" role="alert">
            <%= flash[:alert] %>
        </div>
    <% end %>


    <div class="container">
        <%= yield %>
    </div>
  </body>
</html>
